{
  "name": "hosti-cli",
  "version": "0.1.2",
  "description": "Deploy your sites and web projects easily. Powered by hosti.io",
  "main": "lib/index.js",
  "bin": {
    "hosti": "/bin/hosti"
  },
  "files": [
    "bin",
    "lib"
  ],
  "pkg": {
    "scripts": "./lib/**/*.js",
    "assets": "./bin/**/*"
  },
  "scripts": {
    "dev": "ts-node ./src/index.ts",
    "start": "npm run build && npm run global",
    "build": "npm run clean:some && tsc -p .",
    "global": "npm i -g && hosti",
    "clean:some": "rm -rf ./lib "
  },
  "keywords": [],
  "author": "Alex Lobanov (aleksgowalker@gmail.com)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hosti-io/hosti-cli.git"
  },
  "bugs": {
    "url": "https://github.com/hosti-io/hosti-cli/issues"
  },
  "homepage": "https://github.com/hosti-io/hosti-cli#readme",
  "dependencies": {
    "axios": "0.21.0",
    "configstore": "^5.0.1",
    "class-validator": "^0.12.2",
    "figlet": "^1.5.0",
    "inquirer": "^7.3.3",
    "moment": "^2.29.1",
    "kleur": "^4.1.3",
    "reflect-metadata": "^0.1.13",
    "yargs": "^16.1.1",
    "archiver": "^5.1.0",
    "form-data": "^3.0.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.2.1",
    "@types/archiver": "^5.1.0",
    "@types/configstore": "^4.0.0",
    "@types/moment": "^2.13.0",
    "@types/fs-extra": "^9.0.4",
    "@types/inquirer": "^7.3.1",
    "@types/node": "^14.14.10",
    "@types/yargs": "^15.0.10",
    "typescript": "^4.1.2"
  }
}
